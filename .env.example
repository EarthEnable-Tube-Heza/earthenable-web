# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Google OAuth Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here

# App Configuration
NEXT_PUBLIC_APP_NAME=EarthEnable Hub
NEXT_PUBLIC_COMPANY_DOMAIN=earthenable.org
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Token Management
# Threshold in minutes before expiry to start refreshing tokens (default: 7 days)
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=10080

# Critical threshold in minutes to show warning (default: 24 hours)
NEXT_PUBLIC_TOKEN_CRITICAL_THRESHOLD=1440

# Optional: API Timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000
